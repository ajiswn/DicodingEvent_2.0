<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/imgEventLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/event_logo"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/placeholder_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_name"
                android:textColor="?attr/colorOnBackground"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/quicksand_bold_700" />

            <TextView
                android:id="@+id/tvEventSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/event_summary"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/quicksand_regular_400" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
